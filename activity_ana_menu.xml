<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context="com.example.kemal.splashscreen.anaMenu">

    <ImageButton
        android:id="@id/play"
        android:layout_width="105dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/about"
        android:layout_below="@+id/textClock"
        android:layout_marginTop="55dp"
        android:background="@drawable/play"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="209dp" />

    <ImageButton
        android:id="@id/about"
        android:layout_width="105dp"
        android:layout_height="93dp"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/about"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageButton
        android:id="@id/imageButton3"
        android:layout_width="105dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/about"
        android:layout_below="@+id/about"
        android:layout_marginTop="11dp"
        android:background="@drawable/settings" />

    <TextClock
        android:id="@id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/common_google_play_services_install_title"
        android:text="@string/auto_focus"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="@string/common_google_play_services_enable_button" />

    <ImageButton
        android:id="@id/imageButton"
        android:layout_width="105dp"
        android:layout_height="93dp"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:layout_marginTop="15dp"
        android:background="@drawable/mute" />
</RelativeLayout>
